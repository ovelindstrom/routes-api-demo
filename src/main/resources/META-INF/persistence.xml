<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="routes-api-pu" transaction-type="JTA">
        <jta-data-source>jdbc/routesjpadatasource</jta-data-source>
        <class>se.codecadence.routes.entities.Bus</class>
        <class>se.codecadence.routes.entities.Destination</class>
        <class>se.codecadence.routes.entities.Route</class>
        <properties>
            <property name="jakarta.persistence.schema-generation.database.action" value="create"/>
            <property name="jakarta.persistence.schema-generation.scripts.action" value="create"/>
            <property name="jakarta.persistence.schema-generation.scripts.create-target" value="createDDL.ddl"/>
        </properties>
    </persistence-unit>
</persistence>